<mixin>
    <display-name>Search queries</display-name>
    <items>
        <input name="filter" type="RadioButton">
            <label>Legg p√• filter</label>
            <config>
                <option name="true">True</option>
                <option name="false">False</option>
            </config>
            <default>false</default>
        </input>
        <option-set name="query-type">
            <label>Query typer</label>
            <options minimum="0" maximum="4">
                <option name="term">
                    <label>Term</label>
                    <items>
                        <inline mixin="keyvals"/>
                    </items>
                </option>
                <option name="terms">
                    <label>Terms</label>
                    <items>
                        <inline mixin="keyvals"/>
                    </items>
                </option>
                <option name="match">
                    <label>Match</label>
                    <items>
                        <inline mixin="keyvals"/>
                    </items>
                </option>
                <option name="multi_match">
                    <label>Multi match</label>
                    <items>
                        <inline mixin="keyvals"/>
                    </items>
                </option>
                <option name="prefix">
                    <label>Prefix</label>
                    <items>
                        <inline mixin="keyvals"/>
                    </items>
                </option>
            </options>
            <occurrences minimum="1" maximum="0"/>
        </option-set>

    </items>
</mixin>
